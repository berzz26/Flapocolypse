{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "src/main.c",
                "-o",
                "build/main",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}